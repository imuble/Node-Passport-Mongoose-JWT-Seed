{
    "env": {
        "node": true,
        "es6": true,
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [2, 2],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-spacing": 1,
    },
    "globals": {
        "Promise": true
    }
}
